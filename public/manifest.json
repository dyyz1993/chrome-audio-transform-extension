{
  "manifest_version": 3,
  "name": "社交媒体音频提取与翻译9",
  "version": "0.3.6",
  "description": "多平台媒体提取、下载与音频翻译（TypeScript，MV3）",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "assets/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.douyin.com/*"],
      "js": ["assets/content/index.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": ["storage", "downloads", "scripting", "tabs", "declarativeContent"],
  "host_permissions": [
    "https://*.douyin.com/*",
    "https://*.iesdouyin.com/*",
    "https://*.xiaohongshu.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/content/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
